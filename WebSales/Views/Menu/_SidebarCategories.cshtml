@model IEnumerable<WebSales.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{

    <ul class="sidebar_categories">
        @foreach (var item in Model)
        {
            if (ViewBag.CateId == item.Id)
            {
                <li class="active"><a href="/product/productcategory/@(item.Id)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>
            }
            else
            {
                <li><a href="/product/productcategory/@(item.Id)">@item.Title</a></li>
            }
        }
    </ul>
}