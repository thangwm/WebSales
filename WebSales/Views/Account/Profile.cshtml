                        @Html.ValidationSummary(false)
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" name="FullName" required class="form-control" value="@Model.FullName" />
                        </div>
                        <div class="form-group">
                            <label>User Name</label>
                            <input type="text" name="UserName" required class="form-control" value="@Model.UserName" readonly />
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="text" name="Phone" required class="form-control" value="@Model.Phone" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="Email" required class="form-control" value="@Model.Email" readonly  />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Update </button>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
